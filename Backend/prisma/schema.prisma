generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  MEMBER
  PRESIDENT
  VICE_PRESIDENT
  HANDLER
  SUPER_ADMIN
}

model Club {
  id           Int          @id @default(autoincrement())
  club_name    String
  description  String       @db.Text
  membersCount Int?         @default(0)
  logo_image   String       @db.Text
  poster_image   String    @db.Text
  type         String
  event        Events[]
  core_members CoreMember[]
  gallery      Gallery[]
}

model Events {
  id                    Int            @id @default(autoincrement())
  name                  String
  description           String         @db.Text
  venue                 String
  start_time            DateTime
  end_time              DateTime
  // optional capacity for registrations
  capacity              Int?
  // whether registrations are restricted to a specific email domain
  restrict_email_domain Boolean        @default(false)
  // allowed email domain when restriction is enabled (e.g. "adypu.edu.in")
  allowed_email_domain  String?
  poc                   String
  thumbnail_url         String?
  club_id               Int
  club                  Club           @relation(fields: [club_id], references: [id])
  registrations         Registration[]
}

model Registration {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?
  event_id  Int
  event     Events   @relation(fields: [event_id], references: [id])
  createdAt DateTime @default(now())

  @@unique([event_id, email])
}

model CoreMember {
  id               Int     @id @default(autoincrement())
  name             String
  email            String  @unique
  phone            String
  role             Role    @default(MEMBER)
  password         String
  refreshTokenHash String?
  club_id          Int
  club             Club    @relation(fields: [club_id], references: [id])
}

model Gallery {
  id      Int     @id @default(autoincrement())
  url     String
  text    String?
  club_id Int
  club    Club    @relation(fields: [club_id], references: [id])
}
